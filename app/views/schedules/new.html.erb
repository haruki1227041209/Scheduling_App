<div class="container">
  <h3 class="my-3">スケジュール新規作成</h3>

  <%= render "shared/error", obj: @schedule %>

  <%= form_with model: @schedule, class: "my-4" do |f| %>
    <div class="mb-3">
      <%= f.label :title, "タイトル", class: "form-label text-secondary" %>
      <%= f.text_field :title, class: "form-control bg-light text-dark" %>
    </div>

    <div class="mb-3">
      <%= f.label :start_date, "開始日", class: "form-label text-secondary" %>
      <%= f.date_field :start_date, class: "form-control bg-light text-dark" %>
    </div>

    <div class="mb-3">
      <%= f.label :end_date, "終了日", class: "form-label text-secondary" %>
      <%= f.date_field :end_date, class: "form-control bg-light text-dark" %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :all_day, class: "form-check-input" %>
      <%= f.label :all_day, "終日", class: "form-check-label text-secondary" %>
    </div>

    <div class="mb-3">
      <%= f.label :memo, "スケジュールメモ", class: "form-label text-secondary" %>
      <%= f.text_area :memo, class: "form-control bg-light text-dark" %>
    </div>

    <div class="d-flex justify-content-between">
      <%= f.submit "登録完了する(保存)", class: "btn btn-primary" %>
      <%= link_to "スケジュール情報一覧に戻る(キャンセル)", :schedules, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
