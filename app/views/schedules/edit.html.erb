<h3>スケジュール編集</h3>

<%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.text_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.text_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= check_box :schedule, :all_day, {class: "check_box"}, true, false %></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "編集完了する(保存)"%></li>
      <li><%= link_to "スケジュール情報一覧に戻る(キャンセル)", :schedules %></li>
    </ul>
  </div>
<% end %>